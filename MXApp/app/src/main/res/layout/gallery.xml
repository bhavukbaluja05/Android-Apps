<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".Gallery"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
<!--            PIC 1-->
            <ImageView
                android:id="@+id/pic1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginRight="200dp"
                android:background="@drawable/mx6"

                />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic1"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="CHAKRAVYUH"
                />

            <!--    PIC 2-->
            <ImageView
                android:id="@+id/pic2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="-180dp"
                android:layout_marginRight="0dp"
                android:layout_toRightOf="@+id/pic1"
                android:background="@drawable/mx7"

                />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic2"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="HELLO MINI" />

            <!--   PIC 3-->
            <ImageView
                android:id="@+id/pic3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="30dp"
                android:layout_marginRight="200dp"
                android:background="@drawable/mx8"


                />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic3"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="KAAND" />

<!--            PIC 4-->
            <ImageView
                android:id="@+id/pic4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/txt2"
                android:layout_marginLeft="-180dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="0dp"
                android:layout_toRightOf="@+id/pic3"
                android:background="@drawable/mx9"

                />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic4"
                android:layout_marginLeft="247dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:textStyle="bold"
                android:text="CAMPUS DIARIES" />

<!--            PIC 5 -->
            <ImageView
                android:id="@+id/pic5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/txt3"
                android:layout_marginTop="30dp"
                android:layout_marginRight="200dp"
                android:background="@drawable/mx10"

                />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic5"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="INDORI ISHQ" />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>